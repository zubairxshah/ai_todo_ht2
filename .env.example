# Todo P1 - Environment Variables
# Copy this file to .env and fill in your values

# ===========================================
# SHARED SECRET (must be identical in both services)
# ===========================================
# Generate with: openssl rand -base64 32
BETTER_AUTH_SECRET=your-secret-key-here-minimum-32-characters

# ===========================================
# DATABASE
# ===========================================
# Neon PostgreSQL connection string
DATABASE_URL=postgresql://user:password@ep-xxx.region.aws.neon.tech/dbname?sslmode=require

# For local PostgreSQL (docker-compose --profile local-db)
# DATABASE_URL=postgresql://postgres:postgres@db:5432/todo_p1

# ===========================================
# FRONTEND
# ===========================================
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_AUTH_URL=http://localhost:3000
